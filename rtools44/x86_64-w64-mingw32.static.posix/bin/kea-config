#!/usr/bin/env bash

usage()
{
    cat <<EOF
Usage: kea-config [OPTIONS]
Options:
     [--prefix]
     [--version]
     [--libs]
     [--cflags]
     [--ldflags]
     [--includes]
     [--hdfincludes]
     [--hdfcflags]
     [--hdflibs]
EOF
    exit $1
}
if test $# -eq 0; then
  usage 1 1>&2
fi
while test $# -gt 0; do
case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
esac
case $1 in
    --prefix)
    echo -n "/usr/lib/mxe/usr/x86_64-w64-mingw32.static.posix "
     ;;
	--version)
    echo -n "1.5.3 "
     ;;
    --cflags)
    echo -n "-I/usr/lib/mxe/usr/x86_64-w64-mingw32.static.posix/include "
      ;;
    --libs)
      echo -n "-L/usr/lib/mxe/usr/x86_64-w64-mingw32.static.posix/lib -lkea "
      ;;
    --ldflags)
      echo -n "/usr/lib/mxe/usr/x86_64-w64-mingw32.static.posix/lib "
      ;;
    --includes)
      echo -n "/usr/lib/mxe/usr/x86_64-w64-mingw32.static.posix/include "
      ;;
	--hdfincludes)
      echo -n " /usr/lib/mxe/usr/x86_64-w64-mingw32.static.posix/include "
      ;;
	--hdfcflags)
      echo -n " -I/usr/lib/mxe/usr/x86_64-w64-mingw32.static.posix/include "
      ;;
	--hdflibs)
      echo -n " -lhdf5 -lm -ldl -lws2_32 -lwsock32 -lz -lsz  -lhdf5_cpp -lhdf5 -lm -ldl -lws2_32 -lwsock32 -lz -lsz -lhdf5 -lm -ldl -lws2_32 -lwsock32 -lz -lsz  "
      ;;
  esac
  shift
done
echo
