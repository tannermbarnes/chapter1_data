#! /bin/sh

##  config script for libcaca -- Sam Hocevar <sam@hocevar.net>

prefix=/usr/lib/mxe/usr/x86_64-w64-mingw32.static.posix
exec_prefix=${prefix}

lib_dir=${exec_prefix}/lib
include_dir=${prefix}/include

usage()
{
  cat <<EOF
Usage: caca-config [OPTIONS] [LIBRARIES]
Options:
   [--prefix[=DIR]]
   [--exec-prefix[=DIR]]
   [--version]
   [--libs]
   [--ldflags]
   [--cflags]
EOF
  exit $1
}

libs=""

if test $# -eq 0
then
  usage 1 1>&2
fi

while test $# -gt 0
do
  case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      local_prefix=yes
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      local_prefix=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo 0.99.beta19
      exit 0
      ;;
    --cflags)
      echo_cflags=yes
      ;;
    --ldflags)
      echo_ldflags=yes
      ;;
    --libs | --plugin-libs)
      echo_libs=yes
      ;;
    caca)
      libs="$libs -lcaca  -lz  -lncurses  -lglut -lwinmm -lgdi32 -lglu32 -lopengl32  "
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$libs" = ""
then
  libs="-lcaca"
fi

if test "$local_prefix" = "yes"
then
  if test "$exec_prefix_set" != "yes"
  then
    exec_prefix=$prefix
  fi
fi

if test "$echo_prefix" = "yes"
then
  echo $prefix
fi

if test "$echo_exec_prefix" = "yes"
then
  echo $exec_prefix
fi

if test "$echo_cflags" = "yes"
then
  cflags="-I$include_dir/"
  echo $cflags
fi

if test "$echo_ldflags" = "yes"
then
  ldflags="-L$lib_dir"
  echo $ldflags
fi

if test "$echo_libs" = "yes"
then
  echo -L${exec_prefix}/lib $libs
fi

